<?php

/**
 * Add JS common to annotation modules.
 */
function annotation_add_js() {
  beautytips_add_beautytips();
}

function annotation_menu() {
  return array(
    'node/%node/annotation_form_js/%' => array(
      'page callback' => 'annotation_form_js',
      'page arguments' => array(1, 3),
      'access callback' => 'annotation_form_js_access',
      'access arguments' => array(1),
    ),
  );
}

function annotation_form_js_access($node) {
  return (user_access('post comments') && (node_comment_mode($node->nid) == COMMENT_NODE_READ_WRITE));
}

function annotation_form_js($node, $type) {
  print drupal_get_form('annotation_form', $node, $type);
  exit();
}

function annotation_form(&$form_state, $node, $type) {
  $form = array();

  $form['nid'] = array(
    '#type' => 'value',
    '#value' => $node->nid,
  );
  $form['comment'] = array(
    '#cols' => 30,
    '#type' => 'textarea',
    '#resizable' => FALSE,
  );
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Save comment'),
  );

  return $form;
}

function annotation_form_submit($form, &$form_state) {
  comment_form_submit($form, $form_state);
}
